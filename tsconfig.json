{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",   /* Adjust the rootDir to your source code directory */
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"   /* Adjust the include pattern to match your source code structure */
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
